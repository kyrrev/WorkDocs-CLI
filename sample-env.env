# WorkDocs CLI Environment Configuration
# Copy this to .env and update with your actual values

# Production Environment
PRODUCTION_TOKEN_URL=https://wd3-services1.myworkday.com/ccx/oauth2/your_tenant/token
PRODUCTION_API_URL=https://wd3-services1.myworkday.com/ccx/service/your_tenant/Staffing/v44.1
PRODUCTION_CLIENT_ID=your_production_client_id
PRODUCTION_CLIENT_SECRET=your_production_client_secret
PRODUCTION_REFRESH_TOKEN=your_production_refresh_token

# Sandbox Environment
SANDBOX_TOKEN_URL=https://wd3-impl-services1.workday.com/ccx/oauth2/your_tenant/token
SANDBOX_API_URL=https://wd3-impl-services1.workday.com/ccx/service/your_tenant/Staffing/v44.1
SANDBOX_CLIENT_ID=your_sandbox_client_id
SANDBOX_CLIENT_SECRET=your_sandbox_client_secret
SANDBOX_REFRESH_TOKEN=your_sandbox_refresh_token

# Sandbox Preview Environment
SANDBOX_PREVIEW_TOKEN_URL=https://wd3-impl-services1.workday.com/ccx/oauth2/your_tenant_preview/token
SANDBOX_PREVIEW_API_URL=https://wd3-impl-services1.workday.com/ccx/service/your_tenant_preview/Staffing/v44.1
SANDBOX_PREVIEW_CLIENT_ID=your_sandbox_preview_client_id
SANDBOX_PREVIEW_CLIENT_SECRET=your_sandbox_preview_client_secret
SANDBOX_PREVIEW_REFRESH_TOKEN=your_sandbox_preview_refresh_token

# Application Configuration
MAX_CONCURRENT_UPLOADS=5
MAX_FILE_SIZE_MB=25
INPUT_DIR=input
PROCESSED_DIR=processed
FAILED_DIR=failed
LOG_LEVEL=info

# Optional: Node.js environment
NODE_ENV=production